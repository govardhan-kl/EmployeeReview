<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.1.3/dist/css/bootstrap.min.css" >
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-select@1.13.14/dist/css/bootstrap-select.min.css">
<link rel="stylesheet" href="/css/home_assignwork.css">
<h1>Assign Task to Employee</h1>
<form id="assign-work" action="/home/assign-work/create" method="post">
    <div>
        <select name="ReviewTo" id="ReviewTo" title="Review To">
                <% for(let user of users) { %>
                    <% if(user.email != "admin@admin.com" ){ %>
                        <option value="<%= user._id %>"><%= user.name %></option>
                    <% } %>
                <% } %>
        </select>
    </div>
    <div>
        <select name="ReviewBy" id="ReviewBy" title="Review By">
            <% for(let user of users) { %>
                <% if(user.email != "admin@admin.com" && !user.isAdmin){ %>
                    <option value="<%= user._id %>"><%= user.name %></option>
                <% } %>
            <% } %>
        </select>
    </div>
    <div>
        <button style="margin-left: 40%;" type="submit" class="btn btn-primary">Assign Work</button>
    </div>
</form>
<script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" ></script>
